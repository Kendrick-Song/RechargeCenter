<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical"
    tools:context=".RechargePayActivity">
    <include layout="@layout/title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="217.5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_pay_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_pay_num"
            android:layout_toStartOf="@+id/tv_pay_num"
            android:gravity="center"
            android:text="￥"
            android:paddingBottom="6dp"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_pay_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:paddingLeft="5dp"
            android:textColor="@color/color_333333"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tv_hf_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pay_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="话费充值"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_wx_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="22dp"
            android:text="微信支付"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/ib_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="23dp"
            android:layout_marginEnd="13dp"
            android:background="@color/white"
            android:src="@mipmap/zmkh_flow_pay_icon_sel" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm_pay"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:background="@drawable/red_btn_bg"
        android:text="确认支付"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"/>

</LinearLayout>