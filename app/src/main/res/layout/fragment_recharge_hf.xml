<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RechargeHfFragment">

    <LinearLayout
        android:id="@+id/hf_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            >

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textSize="36sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/phone_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:layout_marginBottom="10dp"
                android:text="广州"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginLeft="15.5dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/phone_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zmkh_flow_icon_user"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25.5dp"
            android:paddingTop="10dp"/>
    </LinearLayout>

    <View
        android:layout_below="@id/hf_ll"
        android:layout_height="1dp"
        android:layout_width="335dp"
        android:layout_centerInParent="true"
        android:background="#F8F8F8" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hf_ll"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/btn_recharge_now"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:text="@string/recharge_now"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="181dp"
        android:background="@drawable/red_btn_bg"/>

</RelativeLayout>